generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String  @id
  email               String  @unique
  name                String?
    hasCreatedBoardOnce Boolean @default(false)
  boards              Board[]
}

model Board {
  id          String   @id @default(cuid())
  title       String
  slug        String
  description String?  @default("")
  order       Int
  columns     Column[]
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, slug])
  @@index([userId, order])
}

model Column {
  id      String @id @default(cuid())
  status  String
  order   Int
  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks   Task[]

  @@index([boardId, order])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?   @default("")
  priority    Priority  @default(medium)
  order       Int
  columnId    String
  dueDate     DateTime?
  column      Column    @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@unique([columnId, title])
  @@index([columnId, order])
}

enum Priority {
  low
  medium
  high
}
